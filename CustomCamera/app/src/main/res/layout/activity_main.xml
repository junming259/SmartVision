<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junming.customcamera.MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/JCView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
    android:id="@+id/changeModeButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Change mode"
    app:layout_constraintRight_toRightOf="@+id/JCView"
    app:layout_constraintLeft_toLeftOf="@+id/JCView"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="20dp"/>

</android.support.constraint.ConstraintLayout>
